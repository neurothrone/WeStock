@page "/collections/edit"
@rendermode InteractiveServer

<PageTitle>Edit Collection</PageTitle>

@if (_collection is null)
{
    <CenteredCircularIndicator/>
}
else
{
    <h3>Edit Collection</h3>

    <EditForm Model="_collection"
              OnValidSubmit="UpdateCollection">
        <DataAnnotationsValidator/>

        <div class="form-group">
            <label for="name">Name</label>
            <InputText id="name"
                       class="form-control"
                       @bind-Value="_collection.Name"/>
            <ValidationMessage For="() => _collection.Name"/>
        </div>

        <div class="d-flex justify-content-start my-3">
            <button type="submit"
                    class="btn btn-primary me-3"
                    disabled="@(!_collection.IsValid)">
                Save
            </button>
            <a href="/collections"
               class="btn btn-secondary">
                Cancel
            </a>
        </div>
    </EditForm>
}