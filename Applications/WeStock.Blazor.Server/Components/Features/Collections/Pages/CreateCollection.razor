@page "/collections/create"
@rendermode InteractiveServer

<PageTitle>Create Collection</PageTitle>
<h3>Create Collection</h3>

<EditForm Model="_collection"
          OnValidSubmit="Create">
    <DataAnnotationsValidator/>

    <div class="form-group">
        <label for="name">Name</label>
        <CustomInputText id="name"
                         class="form-control"
                         autofocus
                         @bind-Value="_collection.Name"/>
        <ValidationMessage For="() => _collection.Name"/>
    </div>

    <div class="d-flex justify-content-start my-3">
        <button type="submit"
                class="btn btn-primary me-3"
                disabled="@(!_collection.IsValid)">
            Create
        </button>
        <a href="/collections"
           class="btn btn-secondary">
            Cancel
        </a>
    </div>
</EditForm>